<%- include('header') -%>
<title>Balance Deposit | B Bank Ltd.</title>
<script type="text/javascript">
	$(document).ready(function(){

		$( "#form3" ).submit(function(event) {

			event.preventDefault();

			$.ajax({
				type: 'POST',
				url: '/deposit',
				data: $('#form3').serialize(),
				dataType: "json",
				success: function(response){
					//alert("a");
					//console.log(response.Success);
					$('#form3')[0].reset();
					//alert("abc");
					document.getElementById("check").innerHTML=response.Success;
					setTimeout(function(){
						document.getElementById("check").innerHTML="";
						console.log("wait");
					},3000);
					if (response.Success=="Money deposit done") {
						document.getElementById("aa").click();
					};
				},
				error: function() {
				}
			})
		});

	});
</script>

</head>
<body>

	<img id="logo" src="/static/assets/logo.png">

						<div class="text-center center-div" id="login">
								<div class="container w-50 border py-5 main">
									<div class="title pb-5">
											<h2 class="font-weight-bold">Deposit</h2>
									</div>
									<div class="title pb-5">
											<h3><%= username %></h3>
									</div>
									<h6>Balance is<h5 class="font-weight-bold"><%= balance %> </h5>in your account.</h6>
			            <h6>Please enter email and the ammount to deposit.</h6>
										<div class="form-group">
										<form id="form3" method="POST" class="pt-3">
											<div class="form-group">
													<input type="text" name="email" placeholder="Email" required="" class="form-control"><br/>
											</div>
												<div class="form-group">
														<input type="number" name="balance" placeholder="BDT" required="" class="form-control"><br/>
												</div>
												<button type="submit" value="Change" class="btn btn-success rounded-pill">Submit</button>
										</form>
								</div>
								<div class="mssg bg-danger">
									<span id="check" ></span>
								</div>
								<div id="LangTable"><a href="/deposit" id="aa"></a>
								</div>

								<p id="selectBottom"><a href="/dashboard">Dashboard</a></p>
				        <p id="selectBottom" class="abc"><a href="/logout">Logout</a></p>



